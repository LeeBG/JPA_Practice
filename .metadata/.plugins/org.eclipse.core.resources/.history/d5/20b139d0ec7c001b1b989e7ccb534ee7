package com.cos.myjpa.domain.user;

import java.time.LocalDateTime;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Lob;
import javax.persistence.ManyToOne;

import org.hibernate.annotations.CreationTimestamp;

import lombok.Data;

/**
 *
 * JPA 엔티티(테이블) 만들기
 * 
 */

@Data
@Entity		//primary key가 없기 떄문에 @ID로 primary key등록
public class User {
	@Id		//PK											//Identity가 자기가 사용하는 데이터베이스의 전략을 따라감 좋음
	@GeneratedValue(strategy = GenerationType.IDENTITY)		// 변호지정 전략(Table 1부터 long Max(60억) 테이블을 만들어서 가져옴,auto_increment,sequence) 값을 만들어 준다.
	private Long id;
	@Column(length = 60,nullable = false) 	//60자로 글자수 제한, nullable은 기본값이 true  @Valid는 DTO에서만
	private String username;
	@Lob									//대용량 데이터 Length = 60000 이런 식도 가능 html태그가 들어가면 용량이 커진다.(썸머노트같은거 쓰면 html 태그 들어감)
	private String password;
	
	
	//누가 적었는지??

	
	// 시간
	@CreationTimestamp				//자동을 현재 시간이 들어감.
	private LocalDateTime createDate;
}
